<div class="main-content pt-4 container">
    <div class="bb-card-details">
      <h1><em><%= @bike.name %></em></h1>
      <%= cl_image_tag(@bike.photo.key) %>
        <div class="bb-card-text">
          <p><strong>Owner:</strong> <%= @bike.user.first_name %> <%= @bike.user.last_name %> </p>
          <p><strong>City:</strong> <%= @bike.location %></p>
          <p><strong>Type of bike:</strong> <%= @bike.bike_type %></p>
          <p><strong>Gears:</strong> <%= @bike.gears %></p>
          <p><strong>Description from the owner:</strong> <%= @bike.description %></p>
          <p><strong>Price per day:</strong> â‚¬<%= @bike.price %></p>
          <button type="button" class="btn btn-dark"><%= link_to "Back", :back %></button>
          <% if current_user == @bike.user %>
             <button type="button" class="btn btn-dark"><%= link_to "Edit your bike", edit_bike_path(@bike.id) %></button>
          <% elsif user_signed_in? %>
            <button type="button" class="btn btn-dark"><%= link_to "Rent now!", new_bike_booking_path(@bike.id) %></button>
          <% else %>
            <button type="button" class="btn btn-dark"><%= link_to "Log in to rent this bike", new_user_session_path %></button>
          <% end %>
        </div>
        <%# Add logic so that booking is only available for bikes that are free,
        possibility of end-date being added %>
      </div>
    </div>
</div>
