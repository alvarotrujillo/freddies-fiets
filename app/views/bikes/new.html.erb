<h1>Bikes#new</h1>
<%= simple_form_for [@bike] do |f| %>
  <%= f.input :name, label: 'Write the brand and model of the bike below' %>
  <%= f.input :bike_type, as: :radio_buttons, collection: Bike::CATEGORIES %>
  <%= f.input :location, label: 'What city are you looking to list your bike in?' %>
  <%= f.input :description, label: 'Describe your bike' %>
  <%= f.input :gears, as: :radio_buttons, collection: Bike:: GEARS, label: 'Select how many gears does the bike have?' %>
  <%= f.input :hand_brakes, as: :boolean %>
  <%= f.input :price, label: 'Price per day' %>
  <%= f.submit 'Create your bike listing' %>
<% end %>
