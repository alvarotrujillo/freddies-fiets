<div class="main-content pt-4 container">
  <h1>Bikes Near Me</h1>
  <div style="width: 100%; height: 350px; margin-bottom: 1rem;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="cards">
    <% bike_markers = Bike.near(current_user.address, 3)  %>
    <% bike_markers.each do |bike| %>
    <%= render "components/cardtrip", bike: bike %>
    <% end %>
  </div>
</div>
