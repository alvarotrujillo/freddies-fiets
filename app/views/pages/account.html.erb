
<div class="main-content pt-4 container">
    <h1 class="fw-bold">Freddie's Fiets Dashboard</h1>
  <div class="card bg-light mb-3">
    <div class="card-body">
      <div class="d-flex justify-content-between">
        <h3 class="fw-bold">User details </h3>
        <%= link_to "Edit your user details", edit_user_registration_path(current_user) %>
      </div>
      <p>First name: <%=current_user.first_name %></p>
      <p>Last name: <%=current_user.last_name %></p>
      <p>e-mail: <%=current_user.email %></p>
    </div>
  </div>

  <div class="card bg-light mb-3">
    <div class="card-body">
      <div class="d-flex justify-content-between">
        <h3 class="fw-bold">Your bikes</h3>
        <%= link_to "List a new bike",  bikes_new_path(current_user) %>
      </div>
      <br>
      <% @user_bikes.each do |bike| %>
        <%= render "components/cardproductbike", bike: bike %>
      <% end %>
    </div>
  </div>

  <div class="card bg-light mb-3">
    <div class="card-body">
      <h3 class="fw-bold">Your bookings</h3>
      <p>The bike(s) you are currently renting are:</p>
      <%# <br>
      <% @user_bookings.each do |user_booking| %>
        <%# <%= render "views/bookings/index", bike: bike %>
      <%# <% end %>
      <% @user_bookings.each do |user_booking| %>
        <h2>Rental information for: <%= user_booking.bike.name %> (<%= user_booking.bike.bike_type %>)</h2>
        <p><strong>Renting period: </strong><%= (user_booking.end_date-user_booking.start_date).to_i %> days</p>

        <p><strong>Start date: </strong><%= user_booking.start_date %></p>
        <p><strong>End date: </strong><%= user_booking.end_date %></p>

        <p><strong>City: </strong> <%= user_booking.bike.location %></p>
      <% end %>
    </div>
  </div>
</div>
